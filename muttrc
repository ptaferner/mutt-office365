## Basic configuration

source "~/.mutt/user"
source "~/.mutt/solarized16"

### Advanced configuration
### YOU SHOULD NOT MODIFY THIS UNLESS YOU KNOW WHAT YOU'RE DOING

# Loading language properties

source "~/.mutt/lang/$my_lang"

unset mark_old           # read/new is good enough for me
set beep_new             # bell on new mails
set pipe_decode          # strip headers and eval mimes when piping
set thorough_search      # strip headers and eval mimes before searching
set delete               # delete immediately
set sleep_time = 0       # speed up folder switching

# Sidebar Patch --------------------------------------
set sidebar_visible = yes
set sidebar_width   = 24
color sidebar_new color221 color233

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Custom headers  -----------------------------------------
unmy_hdr *
unset use_from
unset use_domain
unset user_agent
## OS Info.
my_hdr X-Operating-System: `uname -s`, kernel `uname -r`

### This header only appears to MS Outlook users
my_hdr X-Message-Flag: Outlook sucks. You have been warned.

### Custom Mail-User-Agent ID.
my_hdr User-Agent: Every email client sucks, this one just sucks less.


## Server config

# IMAP config
set imap_user="$my_username@$my_domain"
set imap_pass=$my_password

set folder="imaps://outlook.office365.com/"
set spoolfile= +INBOX
set postponed= +$my_drafts_noquote
set record = +$my_sent_noquote
set trash = +$my_trash_noquote
mailboxes +INBOX

set imap_check_subscribed="yes"
set imap_list_subscribed="yes"
set timeout=15
set mail_check=90
set imap_keepalive=180
set imap_idle
set ssl_use_sslv3=yes

# SMTP config
set realname = $my_realname
set from = "$my_username@$my_domain"
set smtp_pass = $my_password
set hostname = $my_domain
set smtp_url = "smtp://$my_username@$my_domain@outlook.office365.com:587/"
set ssl_force_tls = yes
set smtp_authenticators = "login"
set sig_dashes                       # dashes before sig

# File storage settings

set signature="~/.mutt/signature"
set message_cachedir="~/.mutt/message_cache"
set header_cache="~/.mutt/header_cache"
set tmpdir="~/.mutt/tmp"

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set smart_wrap="yes"
auto_view text/html
set reverse_name=yes
set reverse_realname=yes

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# Text editor
#set editor='vim + -c "set textwidth=72" -c "set wrap" -c "set nocp" -c "?^$"'
set editor="vim"

# Adress book handling
set sort_alias=alias
set reverse_alias=yes
set alias_file="~/.mutt/aliases"
source "~/.mutt/gal"
source "~/.mutt/aliases"
source "~/.mutt/mailing_lists"

# Thread ordering
set sort = 'threads'
set sort_browser="reverse-date"
set sort_aux="last-date-received"
unset collapse_unread
set index_format=" %?M?   ↳&%4C?   %Z      %D     %-15.15n    %s"

## Key bindings

# Mailboxes
bind    index   G  imap-fetch-mail
macro   index   gi "<change-folder>=INBOX<enter>"       "Go to Inbox"
macro   index   gs "<change-folder>=$my_sent<enter>"    "Go to Sent"
macro   index   gd "<change-folder>=$my_drafts<enter>"  "Go to Drafts"
macro   index   gt "<change-folder>=$my_trash<enter>"   "Go to Trash"

# Index
bind    index   n           next-entry
bind    index   p           previous-entry
macro   index   Q           ":set quit=yes\nq" "Quit mutt without asking"
bind    index   C           noop
bind index gg       first-entry
bind index G        last-entry
bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread
bind index <space>  collapse-all

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

# Ctrl-R to mark all as read
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

macro pager \Cu "|urlview<enter>" "call urlview to open links"

# Sidebar Navigation ---------------------------------
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

# Pager
bind    pager   k           previous-line
bind    pager   j           next-line
bind    pager   n           next-entry
bind    pager   p           previous-entry
bind    pager   w           previous-page
bind pager gg top
bind pager G  bottom
bind pager R  group-reply

# View attachments properly.
bind attach <return> view-mailcap

# For better looks
#set markers=no # don't put '+' at the beginning of wrapped lines
